      "benchmark": {
          "statements" : [
              {
                  "title" : "preamble",
                  "text" : [
                      "import time",
                      "tag = '100m'",
                      "bench_name = 'nj-animal-str'"
                  ],
                  "timed" : 0
              },

              {
                  "title" : "load tables",
                  "file" : "join-tables.py",
                  "timed" : 1
              },

              {
                  "title" : "select tables",
		  "text" : [
	              "animals=animals.select()",
	              "relation_join=relation_join.select(['animal_value', 'Values'])"
		  ],
                  "timed" : 1
              },

              {
                  "title" : "setup metrics",
                  "file" : "before.py",
                  "timed" : 0
              },

              {
                  "title" : "perform join",
                  "text" : [
                      "time_start_ns = time.perf_counter_ns()",
                      "result = relation_join.natural_join(animals, ['animal_value=animal_name'], ['animal_id'])",
                      "time_end_ns = time.perf_counter_ns()"
                  ],
                  "timed" : 1
              },

              {
                  "title" : "post processing",
                  "file" : "after.py",
                  "timed" : 0
              }
          ]
      }
    }
  ]
